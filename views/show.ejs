<%- include("partials/header") %>

	
	<div class="ui card fluid ">
  <div class="image">
    <img src="<%= blog.image%>">
  </div>
  <div class="content">
    <h1 class="ui header"><%=blog.title%></h1>
    <div class="meta">
      <span class="date"><%= blog.created.toDateString() %></span>
    </div>
    <div class="description">
      <%- blog.body %>
    </div>
	  
	  <div class="blog-buttons">
		  
	  
	  <a class="ui button" href="/blogs/<%=blog._id%>/edit">Edit</a>
	  <form id="delete" class="ui form" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
		  <button class="ui button" type="submit">Delete</button>
		</form>
	  </div>
  </div>
</div>


<%- include("partials/footer") %>