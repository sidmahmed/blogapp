<%- include("partials/header") %>

	
	<div class="ui segment">
		

		<h1 class="ui dividing header">New Blog Post</h1>
		<form class="ui form" action="/blogs" method="POST">
		  <div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="Post Title">
		  </div>
		  <div class="field">
			<label>Image URL</label>
			<input type="text" name="blog[image]" placeholder="Direct link to image">
		  </div>
		  <div class="field">

			<label>Body</label>
			<textarea name="blog[body]"></textarea>
			</div>
			<div class="field">
				<button class="ui button" type="submit">Post</button>
			</div>
		</form>
		
	</div>
	


<%- include("partials/footer") %>